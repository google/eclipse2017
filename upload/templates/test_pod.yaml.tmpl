apiVersion: v1
kind: Pod
metadata:
    name: upload
    labels:
        app: upload
spec:
    containers:

      - name: upload-server
        image: {{GCR_PREFIX}}/upload-server
        ports:
          - containerPort: 8080
        livenessProbe:
            exec:
                command:
                  - cat
                  - /health/liveness_status
        readinessProbe:
            exec:
                command:
                  - bash
                  - /health/readiness_probe
        volumeMounts:
          - name: upload-volume
            mountPath: /pending-uploads
        resources:
            limits:
                memory: {{UPLOAD_SERVER_TOTAL_MAX_USAGE_MB}}M
            requests:
                memory: {{UPLOAD_SERVER_TOTAL_MAX_USAGE_MB}}M

        # Don't include upload-daemon, this allows for simpler testing

      - name: upload-system-tests
        image: {{GCR_PREFIX}}/upload-system-tests

    volumes:

      - name: upload-volume
        emptyDir:
            medium: ""
